---
import BaseLayout from "../layouts/BaseLayout.astro";
import Banner from "../components/Banner.astro";
import Navbar from "../components/Navbar.astro";

const { destination } = Astro.props;
const routes = [
  ["MOON", "/destination/"],
  ["MARS", "/destination/mars"],
  ["EUROPA", "/destination/europa"],
  ["TITAN", "/destination/titan"],
];
---

<BaseLayout
  title={"Destination"}
  bgMobile={"bg-destination-mobile"}
  bgTablet={"md:bg-destination-tablet"}
  bgDesktop={"lg:bg-destination-desktop"}
>
  <Banner
    route={destination.images.webp}
    styles={"w-[170px] mx-auto lg:mx-0 my-4 md:w-[300px] lg:md:w-[50%] md:col-start-4 md:col-end-10 md:row-start-[4] md:row-end-8 lg:col-start-2 lg:row-start-4"}
  />
  <main class="text-center flex flex-col gap-5 h-fit md:col-start-2 md:col-end-12 md:row-start-[9]  lg:text-start lg:col-start-8 lg:col-end-[-1] lg:row-start-4 lg:row-end-[-1]">
    <Navbar
      routes={routes}
      listStyles={""}
      listItemStyle={"hover:cursor hover:border-b-2 hover:border-b-[#979797]"}
    />
    <section>
      <h1 class=" font-bellefair text-[56px] text-white md:text-[80px] lg:text-[5vw]">{destination.name.toUpperCase()}</h1>
      <p class="font-bar">
        {destination.description}
      </p>
    </section>
    <hr class="border-[#383B4B]" />
    <section class="flex flex-col gap-8 md:flex-row md:justify-evenly lg:justify-start lg:gap-24">
      <div class="flex flex-col gap-3">
        <span class="tracking-[2.36px]">AVG. DISTANCE</span>
        <span class="text-white text-[28px] font-bellefair">{destination.distance.toUpperCase()}</span>
      </div>
      <div class="flex flex-col gap-3">
        <span class="tracking-[2.36px]">EST. TRAVEL TIME</span>
        <span class="text-white text-[28px] font-bellefair">{destination.travel.toUpperCase()}</span>
      </div>
    </section>
  </main>
</BaseLayout>
