---
import BaseLayout from "../layouts/BaseLayout.astro";
import Banner from "../components/Banner.astro";
import Navbar from "../components/Navbar.astro";

const { destination } = Astro.props;
const routes = [
  ["MOON", "/destination/"],
  ["MARS", "/destination/mars"],
  ["EUROPA", "/destination/europa"],
  ["TITAN", "/destination/titan"],
];
console.log("DESTINO ACTUAL", destination);
---

<BaseLayout
  title={"Destination"}
  bgMobile={"bg-destination-mobile"}
  bgTablet={"md:bg-destination-tablet"}
  bgDesktop={"lg:bg-destination-desktop"}
>
  <Banner
    route={destination.images.webp}
    styles={"w-[clamp(170px,40vw,445px)] mx-auto my-4 md:w-[300px] md:col-start-4 md:col-end-10 md:row-start-4 md:row-end-8"}
  />
  <main class="text-center flex flex-col gap-5">
    <Navbar
      routes={routes}
      listStyles={"flex flex-col justify-center"}
      listItemStyle={"hover:cursor"}
    />
    <!-- CREAR SECCION COMPONENTE, LLEVARÁ TÍTULO Y CUERPO -->
    <section>
      <h1 class=" font-bellefair text-[56px] text-white md:text-[80px] lg:text-[100px]">{destination.name.toUpperCase()}</h1>
      <p>
        {destination.description}
      </p>
    </section>
    <hr class="border-[#383B4B]" />
    <section class="flex flex-col gap-8">
      <div class="flex flex-col gap-3">
        <span class="tracking-[2.36px]">AVG. DISTANCE</span>
        <span class="text-white text-[28px] font-bellefair">{destination.distance.toUpperCase()}</span>
      </div>
      <div class="flex flex-col gap-3">
        <span class="tracking-[2.36px]">EST. TRAVEL TIME</span>
        <span class="text-white text-[28px] font-bellefair">{destination.travel.toUpperCase()}</span>
      </div>
    </section>
  </main>
</BaseLayout>
