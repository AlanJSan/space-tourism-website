---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";

const { tech } = Astro.props;
const routes = [
  ["1", "/technology/"],
  ["2", "/technology/spaceport"],
  ["3", "/technology/capsule"],
];
console.log()
---
<BaseLayout
  title={"Technology"}
  bgMobile={"bg-technology-mobile"}
  bgTablet={"md:bg-technology-tablet"}
  bgDesktop={"lg:bg-technology-desktop"}
/>
    <figure class="absolute lg:static left-0 md:top-[20%] mb-[10%] md:mb-0 col-start-[2] col-end-[12] row-start-[8] md:border-b-0 lg:col-start-[8] lg:col-span-full lg:row-start-4 lg:row-span-full lg:w-max">
      <!-- <img data-img={tech.images.portrait} src={tech.images.landscape} alt=`Photo of ${tech.name}` class="mx-auto lg:h-full"> -->
    </figure>
  <main class=" translate-y-2/3 lg:translate-y-0 text-center flex flex-col gap-5 lg:gap-[15%] h-fit md:flex-col lg:flex-row md:col-start-2 md:col-end-12 md:row-start-[6] lg:text-start lg:col-start-1 lg:col-end-9 lg:row-start-6 lg:h-auto lg:justify-around lg:row-span-full">
    <Navbar
      routes={routes}
      listStyles={"text-black text-[32px] w-[152px] md:w-[210px] lg:w-fit lg:h-[304px] lg:flex-col"}
      listItemStyle={"font-bellefair rounded-full h-[40px] w-[40px] md:h-[60px] md:w-[60px] lg:h-[80px] lg:w-[80px] bg-transparent text-white border-white/25 border-solid border-[1px] hover:cursor hover:opacity-[50.01%]"}
      extraItemStyle={"text-black bg-[#fff] hover:opacity-[101%]"}
      navStyles={""}
    />
    <section class="md:space-y-5 lg:space-y-10 lg:h-[70%]">
      <span class="text-white tracking-[2.7px] opacity-[49.51%]  text-base ">THE TERMINOLOGY...</span>
      <h1 class="mt-[1%] font-bellefair text-2xl text-white md:text-[40px] lg:text-[56px]">{tech.name.toUpperCase()}</h1>
      <p class="leading-6 mt-[2%] md:leading-7 lg:leading-8 font-bar">
        {tech.description}
      </p>
    </section>
  </main>
</BaseLayout>
<script>
    const img = document.querySelector("img")
    const srcOriginal = img.src
    if(window.innerWidth > 768){
        img.src = img.getAttribute("data-img")
    } else {
        img.src = srcOriginal
    }
</script>
