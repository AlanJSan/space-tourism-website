---
const { routes, listStyles, listItemStyle, extraItemStyle = "", navStyles = "" } = Astro.props;
const pathName = Astro.url.pathname
const BASE_URL = import.meta.env.BASE_URL
---

<nav class={navStyles}>
  <ul class={" flex justify-around w-[237.5px] mx-auto md:w-[285.5px] lg:ml-0 lg:justify-between " + listStyles}>
    {
      routes.map(([name, route]) => (
        <li
          class={listItemStyle + ` ${BASE_URL+route === pathName && "text-white border-b-2 border-b-white " + extraItemStyle}`}
        >
          <a href={BASE_URL+route} class="block h-full content-center text-center">
            {name}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
